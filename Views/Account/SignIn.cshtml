@{
    ViewBag.Title = "Sign In";
    Layout = null;
}

<!doctype html>
<html lang="en" data-layout="vertical" data-topbar="light" data-sidebar="light" data-sidebar-size="lg">
<head>
    @Html.Partial("~/Views/Shared/_title_meta.cshtml")
    @Html.Partial("~/Views/Shared/_head_css.cshtml")

    <!-- Sweet Alert css-->
    <link href="~/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />

    <script src="~/assets/libs/jquery/jquery-3.6.3.min.js"></script>
</head>
<body>

     <div class="auth-page-wrapper pt-5">


            <!-- auth page content -->
            <div class="auth-page-content">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="text-center mt-sm-5 mb-2 text-white-50">
                                <div>
                                    <a href="@Url.Action("Index", "Dashboard")" class="d-inline-block auth-logo">
                                        <img src="~/assets/images/logo-dark.png" alt="" height="80">
                                    </a>
                                </div>
                  
                            </div>
                        </div>
                    </div>
                    <!-- end row -->

                    <div class="row justify-content-center">
                        <div class="col-md-8 col-lg-6 col-xl-5">
                            <div class="card mt-4">
                            
                                <div class="card-body p-4"> 
                                    <div class="text-center mt-2">
                                    <h5 class="text-dark">@GlobalParameter.Config.Where(w=>w.key=="STATION_NAME").FirstOrDefault().value</h5>
                                    <p class="text-muted">@GlobalParameter.Config.Where(w=>w.key=="SLOGAN").FirstOrDefault().value</p>
                                    </div>
                                    <div class="p-2 mt-4">

            
                                            <div class="mb-3">
                                                <label for="username" class="form-label">ชื่อผู้ใช้</label>
                                                <input type="text" class="form-control" id="username" placeholder="โปรดระบุชื่อผู้ใช้">
                                            </div>
                    
                                            <div class="mb-3">

                                                <label class="form-label" for="password-input">รหัสผ่าน</label>
                                                <div class="position-relative auth-pass-inputgroup mb-3">
                                                    <input type="password" class="form-control pe-5 password-input" placeholder="โปรดระบุรหัสผ่าน" id="password-input">
                                                    <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon" type="button" id="password-addon"><i class="ri-eye-fill align-middle"></i></button>
                                                </div>
                                            </div>

            
                                            
                                            <div class="mt-4">
                                        <button class="btn btn-warning w-100 text-dark" id="save" type="submit">เข้าสู่ระบบ</button>
                                            </div>

                                          
                
                                    </div>
                                </div>
                                <!-- end card body -->
                            </div>
                            <!-- end card -->

                           

                        </div>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end container -->
            </div>
            <!-- end auth page content -->

            <!-- footer -->
            <footer class="footer">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="text-center">
                            <p class="mb-0 text-muted">  @GlobalParameter.Config.Where(w=>w.key=="FOOTER").FirstOrDefault().value Crafted with <i class="mdi mdi-heart text-danger"></i></p>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
            <!-- end Footer -->
        </div>
        <!-- end auth-page-wrapper -->

    @Html.Partial("~/Views/Shared/_vendor_scripts.cshtml")

    <!-- particles js -->
    <script src="~/assets/libs/particles.js/particles.js"></script>
    <!-- particles app js -->
    <script src="~/assets/js/pages/particles.app.js"></script>
    <!-- password-addon init -->
    <script src="~/assets/js/pages/password-addon.init.js"></script>

</body>


<script>



    $(document).ready(function () {
        $('#save').click(function (e) {
            e.preventDefault(); // prevent the form from submitting the default way

            var formData = {
                username: $('#username').val(),
                password: $('#password-input').val(),
            };

            $.ajax({
                type: "POST",
                url: "/account/signin",
                data: JSON.stringify(formData),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: response.msg,
                            timer: 3000,
                            onClose: () => window.location = "/"
                        }).then(() => {
                           window.location = "/"
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.msg,
                            timer: 3000,
                            @* onClose: () => window.location = "/"
                        }).then(() => {
                          window.location = "/" *@
                        });
                    }
                },
                error: function (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: error.msg,
                        timer: 3000,
                        @* onClose: () => window.location = "/"
                    }).then(() => {
                        window.location = "/" *@
                    });
                }
            });
        });
    });
</script>

<script src="~/assets/libs/sweetalert2/sweetalert2.min.js"></script>

</html>

                